# =============================================================================
# BACKEND ENVIRONMENT VARIABLES (Django)
# =============================================================================

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
DJANGO_SETTINGS_MODULE=config.settings.dev
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# Database
DATABASE_URL=postgresql://erp_user:erp_password@localhost:5432/erp_db
DB_NAME=erp_db
DB_USER=erp_user
DB_PASSWORD=erp_password
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=erp-storage
MINIO_USE_SSL=False

# Email (Development - Mailhog)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USE_TLS=False
EMAIL_USE_SSL=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=7

# Internationalization
LANGUAGE_CODE=fr
TIME_ZONE=Africa/Casablanca
USE_I18N=True
USE_L10N=True
USE_TZ=True

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO
SENTRY_DSN=

# Bank Al-Maghrib API (for FX rates)
BAM_API_URL=https://www.bkam.ma/
BAM_API_KEY=

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_FILE_EXTENSIONS=pdf,jpg,jpeg,png,xlsx,csv

# Company Settings
DEFAULT_CURRENCY=MAD
DEFAULT_LOCALE=fr-MA

# Tax Settings
DEFAULT_VAT_RATE=20.0

# Development
DJANGO_LOG_LEVEL=INFO
SQL_DEBUG=False

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES (React/Vite)
# =============================================================================

# API Configuration
VITE_API_URL=http://localhost:8000
VITE_API_VERSION=v1

# Application Configuration
VITE_APP_NAME=ERP Marocaine
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=true
VITE_ENABLE_DEVTOOLS=true

# External Services
VITE_SENTRY_DSN=
VITE_GOOGLE_ANALYTICS_ID=

# Localization
VITE_DEFAULT_LANGUAGE=fr
VITE_SUPPORTED_LANGUAGES=fr,ar,en

# =============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# =============================================================================

# Production Backend (Django)
# DEBUG=False
# SECRET_KEY=your-production-secret-key-here
# DJANGO_SETTINGS_MODULE=config.settings.prod
# ALLOWED_HOSTS=your-backend-domain.com,your-frontend-domain.netlify.app
# DATABASE_URL=postgresql://user:password@your-db-host:5432/erp_prod
# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.netlify.app
# CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.netlify.app

# Production Frontend (Netlify)
# VITE_API_URL=https://your-backend-domain.com
# VITE_APP_ENV=production
# VITE_ENABLE_DEBUG=false
# VITE_ENABLE_DEVTOOLS=false
